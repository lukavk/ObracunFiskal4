<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brown"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"

        android:clickable="false"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Novi artikl"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">



        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- NAZIV ARTIKLA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Naziv artikla"
                        android:textColor="#a5d4e2"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <EditText
                        android:id="@+id/editNaziv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:inputType="text|textCapSentences"
                        android:maxLength="32"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <EditText
                        android:id="@+id/editZaliha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:inputType="text|textCapSentences"
                        android:maxLength="32"
                        android:layout_weight="1"
                        android:textSize="20sp">


                    </EditText>
                </LinearLayout>

                <!-- CIJENA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cijena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cijena"
                        android:textColor="#a5d4e2"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <EditText
                        android:id="@+id/editCijena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:maxLength="8"
                        android:layout_weight="1"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/editDonos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:maxLength="8"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                </LinearLayout>


                <!-- JEDINICA MJERE I POCETNO STANJE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PDV"
                        android:textColor="#a5d4e2"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_poc_stanje"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ukupno"
                        android:textColor="#a5d4e2"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/editPDV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editOstatak"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background"

                        android:maxLength="7"
                        android:text="0"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Prodano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prodano"
                        android:textColor="#a5d4e2"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <EditText
                        android:id="@+id/editProdano"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:maxLength="8"
                        android:layout_weight="1"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/editIznos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:maxLength="8"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- POREZ -->

                <!-- PNP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/editUkupno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background"
                        android:inputType="text"
                        android:maxLength="5"
                        android:textSize="20sp" />

                </LinearLayout>
                <!-- BARCODE -->

                <!-- KATEGORIJE -->

                <!-- IMA LI ARTIKAL SKLADISTE -->

                <!-- KORISTI LI SE ARTIKL U RADNOM NALOGU-->

                <!-- IMA LI ARTIKAL NAKNADU -->

                <LinearLayout
                    android:id="@+id/lyt_naknada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/et_naziv_naknade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2"
                        android:background="@android:drawable/editbox_background"
                        android:focusable="false"
                        android:maxLength="17"
                        android:text="Povratna naknada"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/et_povratna_naknada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background"
                        android:inputType="number|numberDecimal"
                        android:maxLength="8"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- ODABIR SLIKE ZA ARTIKAL -->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <!-- SPREMI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"

            android:text="PREGLEDAJ"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button"
            android:text="Dodaj"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
